<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Vertical Line -->
    <item>
        <shape android:shape="rectangle">
            <size
                android:width="4dp"
                android:height="24dp" />
            <solid android:color="@color/dark_main" />
            <corners android:radius="16dp"/>
        </shape>
    </item>
    <!-- Horizontal Line -->
    <item>
        <rotate
            android:fromDegrees="90"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <size
                    android:width="4dp"
                    android:height="24dp" />
                <solid android:color="@color/dark_main" />
                <corners android:radius="16dp"/>
            </shape>
        </rotate>
    </item>
</layer-list>